#!/usr/bin/env ruby

def help
  puts "cookz commands\n\n"
  puts '  toc - write table of contents'
end

def write_toc
  recipes = `ls retete/`.split("\n")

  def to_human s
    s.gsub('.md', '').gsub('_', ' ')
  end

  toc = "# rețete\n"

  recipes.each do |recipe|
    toc += "\n* [#{to_human(recipe)}](retete/#{recipe})"
  end
  toc += "\n"

  File.write('REȚETE.md', toc)
end

def publish msg
  `git add .`
  `git rm \`git ls-files --deleted\``
  `git commit -m "#{msg}"`
  `git push`
end

args = ARGV.clone
if ARGV.length == 0
  help
else
  case ARGV[0]
  when 'help'
    help
  when 'toc'
    write_toc
  when 'publish'
    unless ARGV.length > 1
      puts 'write a desc of the change. it will be used in the commit msg'
      return
    end
    write_toc
    args.shift
    publish args.join(' ')
  else
    help
  end
end
